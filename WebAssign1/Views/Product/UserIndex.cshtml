@model List<WebAssign1.Models.Product>

<h2 class="mb-4">Our Products</h2>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100" style="border: 2px solid black;">
                <img src="@product.ImageUrl" class="card-img-top" style="max-height: 200px; object-fit: cover;" alt="@product.Name" />
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">Price: ₹@product.Price</p>
                    @if (product.Quantity > 0)
                    {
                        <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@product.Id" class="btn btn-primary mt-2">Add to Cart</a>
                    }
                    else
                    {
                        <span class="badge bg-danger mt-2">Out of Stock</span>
                    }

                </div>
            </div>
        </div>
    }
</div>
