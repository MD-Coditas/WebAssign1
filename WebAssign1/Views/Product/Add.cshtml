@model Product

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-1 p-0">
             <h2 class="text-primary text-center">
                Add New Product
             </h2>
             <hr/>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Price" class="p-0"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Quantity" class="p-0"></label>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="ImageUrl" class="p-0"></label>
            <input asp-for="ImageUrl" class="form-control" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-4">
                <button type="submit" class="btn btn-primary form-control">
                    <i class="bi bi-plus-circle">   Add</i>
                </button>
            </div>
            <div class="col-6 col-md-4">
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</form>

        @section Scripts{
            @{
                <partial name="_ValidationScriptsPartial" />
            }
        }