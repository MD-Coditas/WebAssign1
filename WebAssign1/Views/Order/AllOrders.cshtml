@model List<WebAssign1.Models.Order>

<h2>All Orders</h2>

@foreach (var order in Model)
{
    <div class="card mb-2 border-dark shadow-sm">
        <div class="card-header py-2 px-3">
            <small><strong>User:</strong> @order.Customer.FullName <br /></small>
            <small><strong>Date:</strong> @order.OrderDate.ToString("g")</small>
        </div>
        <div class="card-body p-2">
            <table class="table table-bordered border-dark mb-0">
                <thead class="table-dark text-center">
                    <tr class="small">
                        <th>Product</th>
                        <th>Qty</th>
                        <th>Price</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in order.OrderItems)
                    {
                        <tr class="text-center small">
                            <td>@item.Product.Name</td>
                            <td>@item.Quantity</td>
                            <td>₹@item.UnitPrice</td>
                            <td>₹@(item.UnitPrice * item.Quantity)</td>
                        </tr>
                    }
                </tbody>
            </table>
            <p class="text-end fw-bold me-2 mt-1 mb-0 small">Net Total: ₹@order.TotalAmount</p>
        </div>
    </div>
}
